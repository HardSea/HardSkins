<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/pref_num_of_vibration"
        android:entryValues="@array/pref_num_of_vibration_values"
        android:key="vibration_count"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_select_number_of_vibrate" />

    <ListPreference

        android:defaultValue="Средняя"
        android:entries="@array/pref_time_of_vibration"
        android:entryValues="@array/pref_time_of_vibration_values"
        android:key="vibration_time"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_select_time_of_vibrate">

    </ListPreference>

    <ListPreference
        android:key="before_notify"
        android:entries="@array/pref_num_of_before_time"
        android:entryValues="@array/pref_num_of_before_time_values"
        android:title="Уведомлять заранее"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"

        />

</PreferenceScreen>
